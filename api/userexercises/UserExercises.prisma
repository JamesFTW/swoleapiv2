import { Users } from "../users/Users"
import { Exercises } from "../exercises/Exercises"
import { UserExerciseSets } from "./UserExerciseSets"
import { CompletedWorkouts } from "../workouts/data/completedworkouts/CompletedWorkouts"

model UserExercises {
  userExerciseId Int   @id @unique @default(autoincrement())
  exerciseId Int 
  userId String
  comment String?
  createdAt DateTime    @default(now()) @db.Timestamp(6)
  updatedAt DateTime    @updatedAt @db.Timestamp(6)

  user Users         @relation(fields: [userId], references: [userId])
  exercise Exercises @relation(fields: [exerciseId], references: [exerciseId])

  UserExerciseSets UserExerciseSets[]

  @@unique(name: "exerciseId_userId", fields: [exerciseId, userId])
  @@index([userId])
  @@index([exerciseId])
}